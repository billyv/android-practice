<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.example.billyvalvo.myapplication" >

    <uses-sdk android:minSdkVersion="11" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"> <!-- this prevents keyboard from popping up -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".ListDemoActivity"
            android:label="@string/title_activity_list_demo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".SpinnerDemoActivity"
            android:label="@string/title_activity_spinner_demo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".GridDemoActivity"
            android:label="@string/title_activity_grid_demo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".WebViewDemoActivity"
            android:label="@string/title_activity_activity_webview_demo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".ActionBarDemoActivity"
            android:label="@string/title_activity_action_bar_demo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.billyvalvo.myapplication.MainActivity" />
        </activity>
    </application>

</manifest>
